# AlgoVeda Production Environment Configuration

# Application Settings
NODE_ENV=production
ALGOVEDA_ENV=production
DEBUG=false
LOG_LEVEL=info

# Server Configuration
PORT=8080
HOST=0.0.0.0
WORKERS=8
MAX_CONNECTIONS=10000

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=algoveda
DB_USER=algoveda
DB_PASSWORD=AlgoVeda2025!Prod@DB
DB_SSL=require
DB_POOL_SIZE=100
DB_MAX_OVERFLOW=20

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=AlgoVeda2025!Prod@Redis
REDIS_DB=0
REDIS_MAX_CONNECTIONS=200

# Security Configuration
JWT_SECRET_KEY=AlgoVeda2025!SuperSecretJWTKey!ProductionOnly
JWT_ALGORITHM=HS256
JWT_EXPIRATION=3600
REFRESH_TOKEN_EXPIRATION=604800
ENCRYPTION_KEY=AlgoVeda2025!EncryptionKey!32Chars!
API_KEY_LENGTH=32

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://algoveda.com,https://app.algoveda.com,https://api.algoveda.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With,Accept,Origin

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30
WS_PING_TIMEOUT=60
WS_MAX_CONNECTIONS=5000
WS_MESSAGE_SIZE_LIMIT=1048576

# Trading Configuration
DEFAULT_COMMISSION=0.001
DEFAULT_SLIPPAGE=0.0005
MAX_POSITION_SIZE=0.1
MAX_LEVERAGE=4.0
RISK_FREE_RATE=0.05

# DhanHQ Broker Configuration
DHAN_CLIENT_ID=${DHAN_CLIENT_ID}
DHAN_ACCESS_TOKEN=${DHAN_ACCESS_TOKEN}
DHAN_API_KEY=${DHAN_API_KEY}
DHAN_BASE_URL=https://api.dhan.co
DHAN_WEBSOCKET_URL=wss://api-feed.dhan.co
DHAN_RATE_LIMIT=100

# Market Data Configuration
MARKET_DATA_PROVIDER=dhan
MARKET_DATA_UPDATE_INTERVAL=1000
MARKET_DATA_HISTORY_RETENTION=730
ENABLE_REAL_TIME_DATA=true
ENABLE_LEVEL2_DATA=true

# Risk Management Configuration
ENABLE_RISK_MANAGEMENT=true
MAX_DAILY_LOSS=50000
MAX_PORTFOLIO_VAR=100000
VAR_CONFIDENCE_LEVEL=0.95
STRESS_TEST_SCENARIOS=10
RISK_CHECK_INTERVAL=5

# Performance Configuration
ENABLE_CACHING=true
CACHE_TTL=300
ENABLE_COMPRESSION=true
COMPRESSION_LEVEL=6
ENABLE_HTTP2=true
ENABLE_KEEP_ALIVE=true

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_TRACING=true
JAEGER_ENDPOINT=http://jaeger:14268/api/traces
SAMPLING_RATE=0.01

# Logging Configuration
LOG_FORMAT=json
LOG_FILE=/logs/algoveda.log
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=10
AUDIT_LOG_ENABLED=true

# GPU Configuration
ENABLE_GPU=true
CUDA_VISIBLE_DEVICES=0
GPU_MEMORY_FRACTION=0.8

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=3600
BACKUP_RETENTION=168
BACKUP_LOCATION=/backups

# Email Configuration (for alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=${SMTP_USER}
SMTP_PASSWORD=${SMTP_PASSWORD}
SMTP_TLS=true
ALERT_EMAIL_FROM=alerts@algoveda.com
ALERT_EMAIL_TO=admin@algoveda.com

# External APIs
ALPHA_VANTAGE_API_KEY=${ALPHA_VANTAGE_API_KEY}
NEWSAPI_KEY=${NEWSAPI_KEY}
STOCKTWITS_API_KEY=${STOCKTWITS_API_KEY}

# Feature Flags
ENABLE_OPTIONS_TRADING=true
ENABLE_CRYPTO_TRADING=false
ENABLE_FOREX_TRADING=false
ENABLE_FUTURES_TRADING=true
ENABLE_ML_MODELS=true
ENABLE_ALTERNATIVE_DATA=false
ENABLE_PAPER_TRADING=true
ENABLE_LIVE_TRADING=true
ENABLE_BACKTESTING=true
ENABLE_OPTIMIZATION=true

# Rate Limiting
API_RATE_LIMIT=1000
WS_RATE_LIMIT=100
BURST_SIZE=50
RATE_LIMIT_WINDOW=60

# Session Configuration
SESSION_SECRET=AlgoVeda2025!SessionSecret!SuperSecure
SESSION_TIMEOUT=3600
SESSION_SECURE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=strict

# TLS Configuration
TLS_CERT_PATH=/etc/ssl/certs/algoveda.crt
TLS_KEY_PATH=/etc/ssl/private/algoveda.key
TLS_MIN_VERSION=1.3
HSTS_MAX_AGE=31536000

# Kubernetes Configuration (if applicable)
KUBERNETES_NAMESPACE=algoveda-prod
REPLICA_COUNT=3
ENABLE_AUTO_SCALING=true
MIN_REPLICAS=2
MAX_REPLICAS=10
CPU_THRESHOLD=80
MEMORY_THRESHOLD=80
